<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="@dimen/_150sdp"
        android:padding="@dimen/_30sdp"
        android:src="@drawable/biohazard"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:id="@+id/user"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/black_23"
                android:layout_margin="@dimen/_10sdp"
                android:text="User"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:id="@+id/officer"
                android:layout_margin="@dimen/_10sdp"

                android:textAlignment="center"

                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/back_outline"
                android:text="Civil Officer"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_23sdp"
            android:text="Sign Up"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etlocation"
                android:focusable="false"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_12sdp"
                android:textColor="#000"
                android:textColorHint="#717171"
                android:drawableTint="#000"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:hint="Tap to Select Location"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etName"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:textColor="#000"
            android:textColorHint="#717171"
            android:drawableTint="#000"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:hint="Full Name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:textColor="#000"
            android:textColorHint="#717171"
            android:drawableTint="#000"
            android:drawableLeft="@drawable/ic_outline_email_24"
            android:hint="Email"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etProfession"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:textColor="#000"
            android:textColorHint="#717171"
            android:drawableTint="#000"
            android:drawableLeft="@drawable/ic_outline_edit_24"
            android:hint="Profession"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etShort"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:textColor="#000"
            android:textColorHint="#717171"
            android:drawableTint="#000"
            android:drawableLeft="@drawable/ic_outline_edit_24"
            android:hint="A short description"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_outline_lock_24"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:textColor="#000"
            android:textColorHint="#717171"
            android:drawableTint="#000"
            android:id="@+id/etPassword"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Upload Photo"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_12sdp"
            android:drawableTint="#000"
            android:textColor="#000"
            android:textColorHint="#717171"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/pickImage"/>



        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RegisterBtn"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/black_23"
            android:text="Create Account"/>


    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#3C3C3C"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:id="@+id/change"
            android:text="Already have an account? Sign In"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:textSize="@dimen/_9sdp"
            android:text="By creating an account, you agree to our terms and conditions\n and privacy policy"/>

    </LinearLayout>


</ScrollView>